{
  "name": "<%= name %>",
  "version": "1.0.0",
  "license": "MIT",
  "main": "./dist/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "app": "node create-app.js",
    "app:install": "npm i --no-save $(npm pack . | tail -1)  --prefix app",
    "build": "esbuild index.tsx --outdir=dist --bundle --format=esm --sourcemap --external:react-native --external:react && tsc",
    "watch": "npm-run-all --parallel build:watch copy",
    "copy": "cpx 'dist/**/*' app/node_modules/<%= name %>/dist --watch",
    "build:watch": "esbuild index.tsx --watch --outdir=dist --bundle --format=esm --sourcemap --external:react-native --external:react",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "eslint . --fix --ext .js,.jsx,.ts,.tsx",
    "format": "prettier \"{,!(app|dist)/**/}*.{ts,tsx}\" --write"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-native": "^0.71.3"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.2.0",
    "@types/jest": "^29.5.10",
    "@types/react": "^18.2.41",
    "@types/react-native": "^0.72.7",
    "@types/react-test-renderer": "^18.0.7",
    "babel-jest": "^29.7.0",
    "cpx": "^1.5.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-native": "^0.72.7",
    "react-test-renderer": "^18.2.0",
    "typescript": "^5.3.2"
  },
  "files": [
    "dist"
  ],
  "eslintConfig": {
    "root": true,
    "extends": "@react-native-community",
    "rules": {
      "semi": 0
    },
    "ignorePatterns": [
      "dist",
      "app"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  },
  "jest": {
    "preset": "react-native",
    "testPathIgnorePatterns": [
      "/app/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|@react-native)"
    ],
    "moduleNameMapper": {
      "react-dom": "react-native",
      "<%= name %>": "<rootDir>"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
